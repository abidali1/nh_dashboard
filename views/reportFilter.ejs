<script>
  var user_id = '3';
  var keyword_id = '0';
  var keyword_cat_id = '0';
  var start_date = '0';
  var end_date = '0';
  var country = '0';
  var source_id = '0';
  var folder_id = [];
  var limit = 20;
  var skip = 0;


  function reset_param() {
    keyword_id = '0';
    keyword_cat_id = '0';
    start_date = '0';
    end_date = '0';
    country = $('#newsCountries').val();
    source_id = $('#newsSources').val();
    folder_id = '0';

    limit = 20;
    skip = 0;
  }


  function concat_param() {
    return user_id + '!' + keyword_id + '!' + keyword_cat_id + '!' + start_date + '!' + end_date + '!' + country + '!' + source_id + '!' + folder_id + '!' + limit + '!' + skip;
  }

  function load_Countries_Sources() {
    const country = JSON.parse($('#myCountries').html());
    const source = JSON.parse($('#mySources').html());

    country.forEach(row => {
      $('#newsCountries').append($('<option/>', {
        value: row.name,
        text: row.name
      }));
    })


    source.forEach(row => {
      $('#newsSources').append($('<option/>', {
        value: row.id,
        text: row.source
      }));
    })

  }




  $(function() {
    load_Countries_Sources();
    //  loadNewsFromNavBarFileters();
    $('.KW').on('click', function() {
      $('#newsBlock').html('');
      skip = 0;
      keyword_cat_id = '0';
      keyword_id = $(this).attr('attr');
      loadNewsFromNavBarFileters();

    });

    $('.KW_Cat').on('click', function() {
      $('#newsBlock').html('');
      keyword_id = '0';
      keyword_cat_id = $(this).attr('attr');
      loadNewsFromNavBarFileters();
    });




    $('#datesbutton').on('click', function() {

      $('#newsBlock').html('');


      if ($('#timePeriod').val() == '0') {
        start_date = '0';
        end_date = '0';
      }


      if ($('#timePeriod').val() == 'today') {
        var date = new Date();
        date.setDate(date.getDate());
        var dateString = date.toISOString().split('T')[0]; // "2016-06-08"
        start_date = end_date = dateString;
      }

      if ($('#timePeriod').val() == 'week') {
        var date = new Date();
        end_date = date.toISOString().split('T')[0];
        date.setDate(date.getDate() - 7);
        start_date = date.toISOString().split('T')[0];
      }

      if ($('#timePeriod').val() == 'month') {
        var date = new Date();
        end_date = date.toISOString().split('T')[0];
        date.setDate(date.getDate() - 30);
        start_date = date.toISOString().split('T')[0];
      }

      if ($('#timePeriod').val() == 'specific') {
        if ($('#startdate').val() == '' || $('#enddate').val() == '') {

          $('#loadMore').html('No Data Available');

          myToast('Please select valid filters and try again.', 'error');
          return;
        }
        start_date = $('#startdate').val();
        end_date = $('#enddate').val();

      }

      country = $('#newsCountries').val();
      source_id = $('#newsSources').val();
      // Folder Array updated on each check box click event no need to set that here.
      if (folder_id.length == 0) {
        myToast("Please select at least one folder", "error");
        return;
      }

      skip=0;
      loadNewsFromNavBarFileters();




    });




    $('#loadMore').on('click', function() {

//if(skip==0){return;}
      //      alert(`limit: ${limit}     Skip:${skip} `);

     if( $('#loadMore').html()=='Please select filters and click green arrow icon...')
     return;
     else{
      skip = skip + 20;
      loadNewsFromNavBarFileters();
    }

    });




    $('body').on('click', '.checkFolders', function() {

      if (this.checked) folder_id.push($(this).attr('id'));
      else {
        // folder_id.pop($(this).attr('id'));
        const index = folder_id.indexOf($(this).attr('id'));
        if (index > -1) { // only splice array when item is found
          folder_id.splice(index, 1); // 2nd parameter means remove one item only
        }
      }
      // alert(folder_id);

    });


  });




  // }


  async function loadNewsFromNavBarFileters() {
    // data to be sent to the POST request


   // $('#secAnalytics').hide();
    $('#newsBlock').show();
   // $('#secNotes').hide();
   // $('#sec_keywords').show();
    $('#loadMore').show();


    try {
      const response = await fetch(`reportfilter/filter/` + concat_param(), {
        method: "Get",
        headers: {
          "Content-type": "application/json; charset=UTF-8"
        }
      });

      const json = await response.json();
      //   console.log(json);
      if (Object.keys(json).length == 0)
        $('#loadMore').html('No more data available');
      else
        $('#loadMore').html('Load More');
      // $('#newsBlock').html('');
      json.forEach(row => {
        var date = new Date(row.pub_date);
        date = date.toDateString();
        var news = newsTemplate(row.news_id, row.source, date, row.title.toUpperCase(), row.description, row.url, row.key_words.replace(',', ' | '), row.in_folder, row.notes_news);
        // console.log(news);
        $('#newsBlock').append(news);

      });
    } catch (err) {
      console.log(err);
      myToast("please select all valid filters", "error");
      return err;
    }

  }





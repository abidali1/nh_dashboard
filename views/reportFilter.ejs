            <div style="margin-left: 0;    margin-bottom: 0px;" class="row">
                        <!-- <img class="img-circle img-bordered-sm" src="../../dist/img/user1-128x128.jpg" alt="user image"> -->
                        <span style="margin-left: 0;display: inline-flex;" class="username user-block">
                         
                          <div style=" margin-top: 0px !important; margin-bottom: 0px !important;" class="icheck-material-cyan">
                      <input type='checkbox' news_id="${news_id}" class="right checkFolders" id="check_${news_id}"/>
